<% provide(:title, '出勤社員一覧') %>
<% provide(:class_text, 'user--edit') %>
<% provide(:button_text, '更新') %>
<h1>出勤社員一覧</h1>
<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th>社員番号</th>
        <th>氏名</th>
      </tr>
    </thead>
    
    <% @users.each do |user| %>
    
    <% @user = user %>
    
    <tbody>
      <tr>
        <% if @user.attendances.any?{|day|( day.worked_on == Date.today && !day.started_at.blank? && day.finished_at.blank? )} %>
        <td><%= @user.employee_number.present? ? @user.employee_number : "未設定" %></td>
        <td><%= @user.name %></td>
        <% end %>
      </tr>
    </tbody>
   
    <% end %>
  </table>
</div>